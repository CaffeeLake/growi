{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    /* TODO: remove below flags for strict checking */
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "config",
    "dist",
    "src/public/**",
    "**/*.test.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}
