{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "@growi/ui#build": {
      "dependsOn": ["@growi/core#build"],
      "outputs": ["dist/**", "types/**"]
    },
    "@growi/remark-lsx#build": {
      "dependsOn": ["@growi/core#build", "@growi/remark-growi-directive#build", "@growi/ui#build"],
      "outputs": ["dist/**", "types/**"]
    },
    "@growi/app#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "config/**", "dist/**"]
    },
    "@growi/slackbot-proxy#build": {
      "dependsOn": ["@growi/slack#build"],
      "outputs": ["dist/**"]
    },
    "build": {
      "outputs": ["dist/**", "types/**"],
      "inputs": [
        "src/**/*.js", "src/**/*.jsx",
        "src/**/*.ts", "src/**/*.tsx",
        "src/**/*.css", "src/**/*.scss",
        "tsconfig*.json",
        "vite*.ts"
      ]
    },

    "@growi/app#dev:migrate": {
      "outputs": ["tmp/cache/migration-status.out"],
      "inputs": ["src/migration/*.js"]
    },
    "@growi/remark-lsx#dev": {
      "dependsOn": ["@growi/core#dev", "@growi/remark-growi-directive#dev", "@growi/ui#dev"],
      "outputs": ["dist/**", "types/**"]
    },
    "@growi/app#dev": {
      "dependsOn": ["^dev", "@growi/app#dev:migrate"],
      "cache": false,
      "persistent": true
    },
    "@growi/app#dev:ci": {
      "dependsOn": ["^dev", "@growi/app#dev:migrate"],
      "cache": false
    },
    "dev": {
      "outputs": ["dist/**", "types/**"],
      "inputs": [
        "src/**/*.js", "src/**/*.jsx",
        "src/**/*.ts", "src/**/*.tsx",
        "src/**/*.css", "src/**/*.scss",
        "tsconfig*.json",
        "vite*.ts"
      ]
    },

    "watch": {
      "outputs": ["dist/**", "types/**"],
      "inputs": [
        "src/**/*.js", "src/**/*.jsx",
        "src/**/*.ts", "src/**/*.tsx",
        "src/**/*.css", "src/**/*.scss",
        "tsconfig*.json",
        "vite*.ts"
      ],
      "persistent": true
    },

    "@growi/app#lint": {
      "dependsOn": ["^dev"]
    },
    "@growi/slackbot-proxy#lint": {
      "dependsOn": ["@growi/slack#dev"]
    },
    "lint": {
    },

    "@growi/app#test": {
      "dependsOn": ["^dev"]
    },
    "@growi/slackbot-proxy#test": {
      "dependsOn": ["@growi/slack#dev"]
    },
    "test": {
    },

    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "tsconfig.json"
  ]
}
