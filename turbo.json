{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "@growi/app#dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "outputs": ["dist/**", "types/**"],
      "inputs": [
        "src/**/*.js", "src/**/*.jsx",
        "src/**/*.ts", "src/**/*.tsx",
        "src/**/*.css", "src/**/*.scss",
        "tsconfig*.json",
        "vite*.ts"
      ]
    }
  },
  "globalDependencies": [
    "tsconfig.json"
  ]
}
