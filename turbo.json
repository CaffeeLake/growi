{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "@growi/app#dev": {
      "dependsOn": ["^dev", "^dev:types"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "outputs": ["dist/**"],
      "inputs": [
        "src/**/*.js", "src/**/*.jsx",
        "src/**/*.ts", "src/**/*.tsx",
        "src/**/*.css", "src/**/*.scss",
        "tsconfig*.json",
        "vite*.ts"
      ]
    },
    "dev:types": {
      "outputs": ["types/**"],
      "inputs": [
        "src/**/*.js", "src/**/*.jsx",
        "src/**/*.ts", "src/**/*.tsx",
        "tsconfig*.json",
        "vite*.ts"
      ]
    }
  },
  "globalDependencies": [
    "tsconfig.json"
  ]
}
